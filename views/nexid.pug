doctype html
<html>
<head>
    <title>#{title}</title>
    <meta charset="utf-8">

    <link rel= "stylesheet" href = "/public/css/style.css">
</head>
<body>
    include blocks/header.pug
    <h1>#{title} в Pug</h1>
      
    if emailsVisible
        <h3>Электронные адреса</h3>
        <ul>
            each email in emails
                <li>#{email}</li>
        </ul>
    else
        <h3>Электроннный адрес отсутствует</h3>
    <p>id: #{ns}</p>
</body>
<html>